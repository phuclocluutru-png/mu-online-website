# .htaccess for MU Online Website
# Basic Apache configuration

# Enable rewrite engine
RewriteEngine On

# Hide directory listings if no index file
Options -Indexes

# Block bad bots (User-Agents commonly used for website copying)
SetEnvIfNoCase User-Agent "HTTrack" bad_bot
SetEnvIfNoCase User-Agent "Wget" bad_bot
SetEnvIfNoCase User-Agent "cURL" bad_bot
SetEnvIfNoCase User-Agent "Teleport" bad_bot
SetEnvIfNoCase User-Agent "WebCopier" bad_bot
SetEnvIfNoCase User-Agent "SiteSucker" bad_bot
SetEnvIfNoCase User-Agent "WebZIP" bad_bot
SetEnvIfNoCase User-Agent "WebStripper" bad_bot
SetEnvIfNoCase User-Agent "Website-E" bad_bot
SetEnvIfNoCase User-Agent "Offline Explorer" bad_bot
SetEnvIfNoCase User-Agent "libwww-perl" bad_bot
SetEnvIfNoCase User-Agent "Python-urllib" bad_bot
SetEnvIfNoCase User-Agent "Scrapy" bad_bot
SetEnvIfNoCase User-Agent "Go-http-client" bad_bot
SetEnvIfNoCase User-Agent "axios" bad_bot
SetEnvIfNoCase User-Agent "PostmanRuntime" bad_bot
SetEnvIfNoCase User-Agent "Java" bad_bot
SetEnvIfNoCase User-Agent "node-fetch" bad_bot

<Limit GET POST>
Order Allow, Deny
Allow from all
Deny from env=bad_bot
</Limit>

# Security headers
<IfModule mod_headers.c>
# Prevent clickjacking (allow same origin frames)
Header always append X-Frame-Options SAMEORIGIN

# Prevent MIME type sniffing
Header set X-Content-Type-Options nosniff

# Enable XSS protection
Header set X-XSS-Protection "1; mode=block"

# Referrer policy
Header set Referrer-Policy "strict-origin-when-cross-origin"

# Content Security Policy (allow API calls)
# Updated CSP: allow YouTube iframes and i.ytimg.com thumbnails
Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https: https://i.ytimg.com; font-src 'self' data:; connect-src 'self' https://api.pkclear.com; frame-src 'self' https://www.youtube.com https://www.youtube-nocookie.com;"
</IfModule>

# Compression
<IfModule mod_deflate.c>
AddOutputFilterByType DEFLATE text/plain
AddOutputFilterByType DEFLATE text/html
AddOutputFilterByType DEFLATE text/xml
AddOutputFilterByType DEFLATE text/css
AddOutputFilterByType DEFLATE application/xml
AddOutputFilterByType DEFLATE application/xhtml+xml
AddOutputFilterByType DEFLATE application/rss+xml
AddOutputFilterByType DEFLATE application/javascript
AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
ExpiresActive On
ExpiresByType image/jpg "access plus 1 month"
ExpiresByType image/jpeg "access plus 1 month"
ExpiresByType image/gif "access plus 1 month"
ExpiresByType image/png "access plus 1 month"
ExpiresByType text/css "access plus 1 month"
ExpiresByType application/pdf "access plus 1 month"
ExpiresByType text/javascript "access plus 1 month"
ExpiresByType application/javascript "access plus 1 month"
ExpiresByType application/x-shockwave-flash "access plus 1 month"
ExpiresByType image/x-icon "access plus 1 year"
ExpiresDefault "access plus 2 days"
</IfModule>

# Block access to sensitive files
# Protect sensitive files
<FilesMatch"\.(?:htaccess|htpasswd|ini|log|sh|inc|bak|env|json|xml|config\.php|sql)$">
Order allow, deny
Deny from all
</FilesMatch>

# Block access to .git directory
RedirectMatch 404 /\.git

# Prevent hotlinking images
RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?pkclear\.com [NC]
RewriteRule \.(?:jpe?g|png|gif|bmp|webp)$ - [F,NC]

# Custom error pages (uncomment and modify paths as needed)
# ErrorDocument 404 /404.html
# ErrorDocument 500 /500.html

# Force HTTPS (uncomment if you have SSL)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Prevent hotlinking images
RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?pkclear\.com [NC]
RewriteRule \.(?:jpe?g|png|gif|bmp|webp)$ - [F,NC]

# Remove trailing slash
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+)/$ $1 [R=301,L]

# SSR post previews
RewriteCond %{QUERY_STRING} (?:^|&)id=[0-9]+(?:&|$)
RewriteRule ^pages/post\.html$ /post-ssr.php [L]

RewriteRule ^share/post/([0-9]+)/?$ /share/post.php?id=$1 [L,QSA]
